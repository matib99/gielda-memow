extends layout

block content
  h1= message
    div(class='meme')
        a(href="meme/" + meme.id ) #{meme.name}
        img(src=meme.url class='memeImg')
        p(class='memePrice') #{'Cena: ' + meme.price}
        br
        p #{'Ceny Historyczne:'}
        table(class='priceTable')
            tr
                th #{'Data'}
                th #{'Cena'}
            each price in meme.priceHistory
                tr
                    td #{  price.date}
                    td #{price.value}
        br
        p #{'Zmień cenę:'}
        form(action=`/meme/${meme.id}` method='POST')
            label #{'Nowa cena: '}
            input(type='number' name='price' required)
            input(type='submit', value='Zmień')
        br
        a(href="/") #{'Wróć'}
        
